extends layout

block content
  .col-md-4
    img(src = user.portrait)
    h4 User name: #{user.username}
    h4 Email: #{user.email}
    h4 Name: #{user.firstName} #{user.lastName}
    br
    if user
      a.btn.btn-primary(href='/user/profile/update') Update profile
      a.btn.btn-info(href='/user/profile/portrait_update') Update portrait
