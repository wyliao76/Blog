doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
  title Poster Board
body
  nav.navbar.navbar-expand-sm.navbar-dark.bg-dark
    .container
      a.navbar-brand(href='/')
        Strong| Poster Board
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbar' aria-controls='navbar' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbar.collapse.navbar-collapse
        .navbar-nav
          a.nav-item.nav-link.active(href='/')
            Strong| Home 
            span.sr-only (current)
          if user
            a.nav-item.nav-link.active(href='/post/create')
              Strong| Create Post
      .navbar-nav.justify-content-end
        if user
          li
            h3.text-white Hello #{user.username},
          li
            a.nav-item.nav-link.active(href='/user/profile')
              Strong| Profile
          li 
            a.nav-item.nav-link.active(href='/user/logout')
              Strong| Logout
        else
          li
            a.nav-item.nav-link.active(href='/user/login')
              Strong| Login
          li
            a.nav-item.nav-link.active(href='/user/register')
              Strong| Sign up

  .jumbotron.jumbotron-fluid.bg-info.text-white.text-center
    .container
      h1.display-5 Welcome to the poster board
      p.lead Create an account and post something to share with others
  br
  .container
    .row
      .col-md-4
        != messages ('message', locals)
  .container
    .row
      each post in posts
        .col-md-6.col-lg-4
          .card
            img.card-img-top.img-fluid(src="/image/MilkyWay.jpg")
            .card-body
              h3.card-title
                a(href='/post/'+post._id) #{post.title}
              p #{post.body}
          
br
footer.text-muted
  .container
    nav.nav.nav-pills.flex-column.flex-md-row.justify-content-center
      a.nav-link.active(href='https://www.cakeresume.com/s--kehXRV0AVI2rqegA4pGiNQ--/wei-yu-liao' data-toggler='tab') Cake Resume
      a.nav-link(href='https://github.com/wyliao76/Blog' data-toggler='tab') GitHub
      a.nav-link(href='#about' data-toggle='tab') About the author
      a.nav-link(href='#home' data-toggle='tab') Home
    .tab-content.py-5
      .tab-pane.active(id="about")
        h3 About
        p Hello, I'm Will Liao. This is my first website with Node.js!
      .tab-pane(id="home")
        h3 Home
        p
          | You are at 
          span.text-info(data-toggle='tooltip' title='This is a tooltip') the home page 
          | .
    button.btn.btn-secondary(type='button' data-toggle='tooltip' data-placement='top' title='Tooltip on top')
      | Tooltip on top
    p.float-right
      a(href='/') Back to top
    p.text-center &copy; 2018, Will Liao

