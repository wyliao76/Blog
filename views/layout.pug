doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
  title Poster Board
header
  nav.navbar.navbar-expand-sm.navbar-dark.bg-dark
    .container
      a.navbar-brand(href='/')
        Strong| Poster Board
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbar' aria-controls='navbar' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbar.collapse.navbar-collapse
        .navbar-nav
          a.nav-item.nav-link.active(href='/')
            Strong| Home 
            span.sr-only (current)
          if user
            a.nav-item.nav-link.active(href='/post/create')
              Strong| Create Post
      .navbar-nav.justify-content-end
        if user
          li
            h3.text-white Hello #{user.username}, 
          li 
            a.nav-item.nav-link.active(href='/user/logout')
              Strong| Logout
        else
          li
            a.nav-item.nav-link.active(href='/user/login')
              Strong| Login
          li
            a.nav-item.nav-link.active(href='/user/register')
              Strong| Sign up
          
  .container
    .row
      .col-md-4
        br
        != messages ('message', locals)
        if errors
          each error in errors
            div(class="alert alert-danger") #{error.msg}
        block content
          
br
footer.text-muted
  .container
    p.float-right
      a(href='/') Back to top
    p.text-center &copy; 2018, Will Liao

