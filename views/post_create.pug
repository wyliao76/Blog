extends layout

block content
  h1 Create a post
  form(method='POST', action='')
    #form-group
      label Title:
      input.title.form-control(name='title', type='text', value=(undefined===post ? '' : post.title))
    #form-group
      label Author:
      input.author.form-control(name='author', type='text', value=(undefined===post ? '' : post.author))
    #form-group
      label Body:
      textarea.form-control(name='body')=undefined===post ? '' : post.body
    br
    input.btn.btn-primary(type='submit', value='submit')
